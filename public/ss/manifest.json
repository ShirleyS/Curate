{
    "manifest_version": 2,
    "name": "CuratedAux",
    "description": "POST details of the current page to a remote endpoint.",
    "version": "0.2",
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "http://localhost:9393/",
        "https://peaceful-refuge-3562.herokuapp.com/",
        "https://peaceful-refuge-3562.herokuapp.com/*",
        "http://peaceful-refuge-3562.herokuapp.com/",
        "http://peaceful-refuge-3562.herokuapp.com/*",
        "identity"

    ]


}


