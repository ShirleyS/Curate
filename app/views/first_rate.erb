<section id="results">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Search Results</h2>

                    <% if @results %>
                    
                    <h3 class="section-subheading text-muted"><a href="/signup">Here 
                        you go. Yup.</a></h3>
                    
                    <% else %>
                        <p> No results...</p>
                         <p><a href=""> Want to be the first to rate it ?</a></p>
                    <% end %>

                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <form name="signin" id="signinForm" novalidate>
                        <div class="row">

                            <div class="col-md-4" "col-md-offset-1">
                                <div>Rating Avg: <%= @rating_avg %></div>

                                <div class="form-group">
                                    <% if @results %>
                                      <div> Searched: </div>
                                        <% @results.each do |result| %>
                                            
                                            <br><br>
                                            <%= result.url %>
                                        <% end %>
                                       
                                    <% else %>    
                                      <% end %>

                                </div>


                            </div>


                      <div class="col-md-2">

                                <div class="form-group">
                                      <% if @results %>

                                    <div> Search Title: </div>
                                        <% @results.each do |result| %>
                                     <br><br>

                                        <%= result.title %>

                                        <% end %>
                   
                                     <% else %>
                                      <% end %>

                                </div>



                     </div>




                            <div class="col-md-4">


                                <div class="form-group">
                                  <% if @comments %>
                                   <div>Search Comments</div>
                                  <% @comments.each do |comment| %>
                                  
                                        <br><br>

                                  <%= comment.comment %>

                                 <% end %>
                                <% else %>

                                <% end %>
                                </div>



                            </div>





                            <div class="col-md-2">


                                <div class="form-group">
                                      <% if @results %>
                                    <div> Average Rating: </div>
                                        <% @results.each do |result| %>
                                        <br><br>

                                            <%= result.rating %>
                                        <% end %>                                      
                                       <% else %>

                                      <% end %>

                                </div>




                            </div>





                            <div class="clearfix"></div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
