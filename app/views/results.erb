<section id="results">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Search Results</h2>

            <% if @results %>
                    <h3 class="section-subheading text-muted">
                        <a href="/signup">Here you go. Yup.</a>
                    </h3>
            </div>
        </div>


          <div class="col-md-11 col-md-offset-1">
            <h3><a href="<%= @result_url %>"><%= @result_url %></a></h3>

            <h3>Avgerage Rating: <%= @rating_avg %></h3>
        </div>
        
            <% else %>
        
            <p> No results...</p>
            <% if session[:user_id] %>
                <p><a href="/newreview"> Want to be the first to rate it ?</a></p>
            <% else %>
                <p><a href="/signin"> Want to be the first to rate it ?</a></p>
            <% end %>
        <% end %>


    <div class="col-md-11 col-md-offset-1">

        <div class="form-group">
            <% if @comments %>
                <div class="numleft">Comments:</div>
                <div class="numright">Ratings:</div>
                <% @comments.each do |comment| %>
            <br><br>
                <%= comment.comment %> 
                <div class="numright">
                <%= @res.rating %>
                </div>
                <% end %>
           <% end %>

          
        </div>
    </div>

   

    </div>

     <div class="clearfix"></div>  
     
    </div>
</section>
